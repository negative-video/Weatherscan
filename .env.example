# Weatherscan Environment Configuration
# Copy this file to .env and fill in your API keys

# OpenWeatherMap API Key (REQUIRED)
# Sign up for free at: https://openweathermap.org/api
# Free tier: 1,000 calls/day
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Mapbox API Key (REQUIRED for map tiles)
# Sign up for free at: https://www.mapbox.com/
MAPBOX_API_KEY=your_mapbox_api_key_here

# Optional: Ambee Pollen API Key
# Sign up at: https://www.getambee.com/
# Free tier: 100 calls/day
# Leave empty to disable pollen features
AMBEE_API_KEY=

# Server Configuration
# Port for the web server (default: 8080)
HTTP_PORT=8080

# Port for CORS proxy (default: 8081)
CORS_PORT=8081

# Node environment
NODE_ENV=production

# Cache configuration
# Cache TTL in minutes (default: 10)
CACHE_TTL_MINUTES=10

# Feature Flags
# Enable/disable optional features (true/false)
ENABLE_POLLEN=false
ENABLE_HEALTH_INDICES=false
ENABLE_SATELLITE=true
ENABLE_RADAR=true

# Advanced Configuration
# Radar update interval in minutes (default: 5)
RADAR_UPDATE_INTERVAL=5

# Weather refresh interval in minutes (default: 10)
WEATHER_REFRESH_INTERVAL=10
